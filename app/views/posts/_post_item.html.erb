<style media="screen">
  .post-item {
    display: flex;
    flex-direction: row;
    padding: 10px 0px;
  }
  .post-item .little-icon {
    width: 80px;
    height: 80px;
  }

  .post-item img {
    width: 100%;
    height: 100%;
  }

  .post-item .title {
    display: flex;
    flex-direction: column;
  }

  .post-item a {
    font-size: 24px;
    font-weight: lighter;
  }

  .post-item .title {
    padding-left: 10px;
  }

  .list-number {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 17px;
    padding-right: 4px;
    color: #c6c6c6;
  }

  .list-number p:first-child {
    padding-right: 10px;
  }
</style>
<div class="post-item">
  <div class="list-number">
    <p><%= index %></p>
    <p>45.6k</p>
  </div>
  <div class="little-icon">
    <img src="<%= post.image_url %>" alt="<%= post.title %>">
  </div>
  <div class="title">
    <h3>
      <%= link_to post.title, 'http://' + post.url %>
    </h3>
    <p>Submitted 6 hours ago by <%= post.author.username %></p>
  </div>
</div>
